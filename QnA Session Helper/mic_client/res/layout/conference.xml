<Button
    android:id="@+id/stop_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/apply_button"
    android:layout_alignBottom="@+id/apply_button"
    android:layout_alignRight="@+id/talk"
    android:layout_marginRight="18dp"
    android:background="@layout/custom"
    android:text=" Stop  "
    android:textColor="@android:color/white" />

<Button
    android:id="@+id/apply_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/talk"
    android:layout_below="@+id/talk"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="42dp"
    android:background="@layout/custom"
    android:text="Apply"
    android:textColor="@android:color/white" />

<ImageView
    android:id="@+id/talk"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="96dp"
    android:src="@drawable/bu" />

</RelativeLayout>